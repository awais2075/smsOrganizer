<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_send"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_sendSmsBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_rectangle_green"
        android:maxWidth="230dp"
        android:minWidth="80dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_sendSmsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 OCT 12:00 PM"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/text_sendSmsBody"
        app:layout_constraintTop_toBottomOf="@+id/text_sendSmsBody" />

</android.support.constraint.ConstraintLayout>


